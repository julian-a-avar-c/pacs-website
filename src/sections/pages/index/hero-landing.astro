---
import * as mainConfig from "@/config/main";
import ContainerSection from "@/sections/container-section.astro";
import { twMerge } from "tailwind-merge";
// const pageConfig = mainConfig.pages.byName.index;

const pageConfig = mainConfig.pagesByName["index"];

const buttonButtonData = pageConfig.landingHero.buttons.find(
  (button) => button.name === "button"
)!;
const buttonConnectOnLinkedInData = pageConfig.landingHero.buttons.find(
  (button) => button.name === "connectOnLinkedin"
)!;
---

<ContainerSection
  bgClassOverride={(bgClass) => twMerge(bgClass, "bg-slate-300 py-0 bg-[url(/IMG_2304-1.JPEG)] bg-no-repeat bg-cover bg-[center_20%]")}
>
  <div
    slot="container"
    class="container grid grid-cols-6 grid-rows-6 bg-slate-800/10"
  >
    <div
      class="col-start-2 col-span-4 row-start-2 row-span-4 bg-slate-200/80 p-8 gap-4 grid rounded-[0.5rem]"
    >
      <div class="grid grid-cols-4 gap-y-4">
        <!-- Title & description -->
        <h1 class="font-extrabold text-5xl col-span-4">
          Processing & Automation
          <br />
          Consultancy Solutions
        </h1>
        <div class="flex flex-col col-start-1 col-span-2 py-4 gap-4">
          <p>
            PACS is a provider of blending and manufacturing plant designs,
            equipment and turnkey projects for oil and gas companies around the
            world.
          </p>
          <p>
            PACS provides consulting services and industrial innovative
            engineering solutions.
          </p>
        </div>
      </div>
      <div class="flex">
        <!-- Two buttons -->
        <a
          href={buttonButtonData.href}
          class="min-w-fit px-4 py-2 ring-2 rounded-full bg-zinc-900 text-white ring-transparent hover:ring-white focus:ring-white"
        >
          {buttonButtonData.value}
        </a>
        <div class="size-4"></div><!-- Spacer. -->
        <a
          href={buttonConnectOnLinkedInData.href}
          class="min-w-fit px-4 py-2 ring-2 rounded-full bg-blue-500 text-white ring-transparent hover:ring-white focus:ring-white"
        >
          {buttonConnectOnLinkedInData.value}
        </a>
      </div>
    </div>
  </div>
</ContainerSection>
