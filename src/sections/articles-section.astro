---
import ArticleBannerCard from "@/components/article-banner-card.astro";
import * as mainConfig from "@/config/main";
import { Icon } from "astro-icon/components";

const pageConfig = mainConfig.pagesByName["articles"];
---

<section class="col-[fullbleed] grid grid-cols-[2fr_5fr]">
  <div class="bg-zinc-900 text-white p-16 flex flex-col gap-4">
    <h3 class="text-6xl">Articles</h3>
    <p>
      PACS LLC presents an innovative line of products ideal to satisfy the
      needs of a dynamic and flexible market. Saving energy costs and maximizing
      manpower productivity returns via high degree of affordable modular
      automation and streamlining logistics.
    </p>
    <div class="flex items-center gap-2">
      <p>View all projects</p>
      <Icon name="fa6-solid:arrow-right-long" />
    </div>
  </div>
  <div
    class="grid grid-cols-3 p-16 gap-16 bg-[url('IMG_2256.JPEG')] bg-fixed bg-no-repeat bg-cover bg-clip-padding bg-[center_80%]"
  >
    {
      pageConfig.data.map((article) => (
        <ArticleBannerCard
          imageSource={article.overview.imageSource}
          title={article.title}
          shortDate={article.shortDate}
          longDate={article.longDate}
          author={article.author}
          authorImageSource={article.authorImageSource}
          description={article.overview.summary}
          readMoreHref={article.href}
        />
      ))
    }
  </div>
</section>
