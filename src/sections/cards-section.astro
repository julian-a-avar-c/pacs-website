---
import { Icon } from "astro-icon/components";
import ContainerSection from "@/sections/container-section.astro";

interface Props {
  title: string;
  cards: ReadonlyArray<{
    icon: string | null;
    title: string;
    description: string;
  }>;
}

const { title, cards } = Astro.props;

// const tagline: string | undefined = "About"
---

<section class="col-[content] flex flex-col gap-16">
  {title && <h2 class="text-center font-extrabold text-4xl">{title}</h2>}
  
  <div class="flex self-center gap-12">
    {
      cards.map((card) => (
        <div id={`${card.title}`} class=" w-96 rounded-lg shadow-md p-8 flex flex-col gap-6 hover:bg-zinc-100/40">
          <div class="text-2xl flex gap-4 items-center">
            <Icon name={
                card.icon === null ? "fa6-solid:circle-question" : card.icon
              } class="size-10" />
            <h4 class="font-bold">{card.title}</h4>
          </div>
  
          <div class="text-lg/8">{card.description}</div>
  
          {false && (
            <hr class="bg-black border-t-2" />

            <div>footer</div>
          )}
        </div>
      ))
    }
  </div>
</section>
